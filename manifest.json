{
  "manifest_version": 2,

  "name": "Heart of Gold",
  "description": "This extension allows the user to round up their transactions for charity.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["https://www.gstatic.com/firebasejs/4.3.1/firebase.js", "content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "background"
  ]
}
